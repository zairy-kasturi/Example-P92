#include <iostream>
#include <cmath>
#include <iomanip>
using namespace std;


void main()
{
	int x11, x22, y11, y22;
	double distance=0;

	cout << "Input first point : "; cin >> x11 >> y11;
	cout << "Input second point : "; cin >> x22 >> y22;

	distance = sqrt(pow((x22 - x11), 2) + pow((y22 - y11), 2));

	cout << fixed<<setprecision(2)<<"The distance between two points is : " << distance;
}

